# Lambda Environment Variables
# Copy to .env for local testing, set in AWS Lambda console for production

# Database (REQUIRED)
DATABASE_URL="postgresql://user:password@host:5432/tiffin_db"

# JWT Secrets (REQUIRED - CHANGE IN PRODUCTION)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRATION="7d"

# Environment
NODE_ENV="production"

# Frontend URL (for CORS)
FRONTEND_URL="https://your-app.vercel.app"

# ⚠️ SECURITY WARNING:
# - NEVER commit real secrets to Git
# - Use AWS Secrets Manager or Parameter Store in production
# - Rotate secrets regularly
